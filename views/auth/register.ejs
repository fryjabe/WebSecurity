<%- include('../partials/head.ejs') %>
<link rel="stylesheet" type="text/css" href="/stylesheets/login.css">
<%- include('../partials/headclose.ejs') %>

<main>
    <% if (errorMessage != ""){ %>
      <div class="alert alert-danger"> <%= errorMessage %> </div>
    <% } %>

    <div class="radabox">
        <div class="img-responsive headimage">
            <img src="/assets/logo.png" alt="Logo">
        </div>

        <h1>Join SP Today!</h1>

        <form class="box" name="Signup" method="post">

            <input  id='name' type="text" placeholder="Username" name="name" autofocus>
            <input  id='email' type="email" placeholder="Email" name="email">
            <input  id="password" type="password" placeholder="Password" name="password">
            <p class="text-danger hidden" id="passReq">Password must follow certain <abbr title="Between 6 and 12 characters with numbers and letters. One capital letter and one lowercase at least.">requirements</abbr></p>
            <input  id="repassword" type="password" placeholder="Repeat password" name="repassword">

            <input type="hidden" name="_csrf" value="<%- csrfToken %>">

            <button  type="submit" name="Button1" id="submitbutton" class="btn btn-primary full-width loginbtn" >
                Sign me in!
            </button>
            <a  href="/users/login" name="HaveaccountButton">
                Login instead
            </a>
        </form>

    </div>

</main>

<script src="/scripts/register.js"></script>

<%- include('../partials/end.ejs') %>
